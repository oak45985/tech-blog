<section>
    <h2>Create a New Blog Entry</h2>

    <form class="new-entry-form">
        <div>
            <label for="entry-title">Entry Title</label>
            <input type="text" id="entry-title" name="entry-title"/>
        </div>
        <div>
            <label for="entry-url">Your Webpage</label>
            <input type="text" id="entry-url" name="entry-url"/>
        </div>
        <div>
            <label for="entry-content">Blog Entry</label>
            <textarea type="textbox" id="entry-content" name="entry-content" rows="5">Your new blog entry goes here...</textarea>
        </div>
        <div>
            <button type="submit" class="btn">Create</button>
        </div>        
    </form>
</section>
{{#if entries.length}}
<section>
    <h2>Your Blog Entries</h2>
    <ul>
        {{#each entries as |entry|}}
        <li>
            {{> entry-item entry}}
            <a href="/dashboard/update/{{entry.id}}" class="update-entry">Update Entry</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}
<script src="/scripts/create-entry.js"></script>